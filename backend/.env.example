# Copy this file to .env and fill in your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=converter_db
DB_USERNAME=postgres
DB_PASSWORD=your_database_password

# AI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Alternative: Claude API from Anthropic
# Get your API key from https://console.anthropic.com/
CLAUDE_API_KEY=sk-ant-your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=2000

# AI Chat Configuration
AI_PROVIDER=openai
AI_TEMPERATURE=0.7
AI_SYSTEM_PROMPT="You are a helpful AI assistant that can analyze PDF documents and answer questions about their content. Be concise and accurate in your responses."

# File Upload Configuration
MAX_FILE_SIZE=52428800
UPLOAD_PATH=../uploads/
TEMP_PATH=../temp/

# Security Configuration
JWT_SECRET=generate_a_random_32_character_string_here
SESSION_LIFETIME=86400
CORS_ORIGIN=*

# Email Configuration (optional - for user verification)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_gmail_app_password
SMTP_FROM_EMAIL=noreply@yourapp.com
SMTP_FROM_NAME="File Converter"

# Stripe Configuration (optional - for payments)
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Application Configuration
APP_NAME="File Converter Suite"
APP_URL=http://localhost:8080
APP_ENV=development
DEBUG=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_CLOUD_STORAGE=false
ENABLE_API_ACCESS=true
ENABLE_WEBHOOKS=false
ENABLE_ANALYTICS=true

# Development Settings
DEV_MODE=true
MOCK_AI_RESPONSES=false
SKIP_EMAIL_VERIFICATION=true
